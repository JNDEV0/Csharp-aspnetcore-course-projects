@*
    this Table3 View Component is used similar to an async partial view,
    see HomeController and Table3ViewComponent.cs
*@
@using ViewComponentsExample.Models;
@model PersonTableModel;
<div class="box">

    <h3>@Model.Title</h3>

    <table class="table w-100">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.Persons)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.JobTitle</td>
                </tr>
            }
        </tbody>
    </table>
</div>